<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="86dp"
        android:text="@string/mobileDeposit"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/termofusetitle"
        android:layout_width="173dp"
        android:layout_height="41dp"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="204dp"
        android:text="@string/termOfUse"
        android:textColor="#0041C2"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/termofusedescription"
        android:layout_width="334dp"
        android:layout_height="323dp"
        android:layout_below="@+id/termofusetitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="34dp"
        android:text="@string/termOfUseDescription"
        android:textSize="16dp" />


    <Button
        android:id="@+id/disagree"
        android:layout_width="153dp"
        android:layout_height="60dp"
        android:layout_below="@+id/termofusedescription"
        android:layout_alignParentStart="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="43dp"
        android:text="DISAGREE" />

    <Button
        android:id="@+id/accept"
        android:layout_width="153dp"
        android:layout_height="60dp"
        android:layout_below="@+id/termofusedescription"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="34dp"
        android:text="ACCEPT" />
</RelativeLayout>

